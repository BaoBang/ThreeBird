<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_color_gradient"
    android:id="@+id/layoutRoot">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarCreateOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/colorPrimary"
        app:title=""
        app:titleTextColor="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_back_list">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_create_order"
            android:textSize="@dimen/text_size_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin_vertical"
        android:layout_marginRight="@dimen/margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:src="@drawable/noimage"
            android:contentDescription="@string/avatar_description"/>
        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/tfbName"
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:labelText="@string/enter_other_name"
            app:primaryColor="@color/colorAccent"
            app:panelBackgroundColor="@color/color_white"
            app:errorColor="@color/A400red"
            android:layout_gravity="center_vertical">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:background="@color/color_white"/>
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        <ImageButton
            android:id="@+id/btnAddClient"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_button_float"
            android:src="@drawable/ic_button_float"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:contentDescription="@string/add"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tfbOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="@string/product_id"
                    android:layout_marginLeft="@dimen/margin_vertical"
                    android:layout_marginRight="@dimen/margin_vertical"
                    app:primaryColor="@color/colorAccent"
                    app:panelBackgroundColor="@color/color_white"
                    app:errorColor="@color/A400red"
                    app:enabled="false">
                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/txtOrderId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:background="@color/color_white"
                        android:enabled="false"/>
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:paddingTop="@dimen/padding"
                android:layout_marginEnd="@dimen/margin_vertical">
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tfbCreateAt"
                    android:layout_weight="90"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:labelText="@string/created_at"
                    android:layout_marginLeft="@dimen/margin_vertical"
                    android:layout_marginRight="@dimen/margin_vertical"
                    app:primaryColor="@color/colorAccent"
                    app:panelBackgroundColor="@color/color_white"
                    app:errorColor="@color/A400red">
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:background="@color/color_white"/>
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <ImageButton
                    android:id="@+id/btnCreatedAt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_button_float"
                    android:src="@drawable/ic_button_float"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    android:contentDescription="@string/add"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:layout_marginLeft="@dimen/margin_vertical"
                android:layout_marginRight="@dimen/margin_vertical"
                android:layout_marginTop="@dimen/padding">

                <Spinner
                    android:id="@+id/spStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding">
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tfbPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="@string/phone"
                    android:layout_marginLeft="@dimen/margin_vertical"
                    android:layout_marginRight="@dimen/margin_vertical"
                    app:primaryColor="@color/colorAccent"
                    app:panelBackgroundColor="@color/color_white"
                    app:errorColor="@color/A400red">
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:background="@color/color_white"/>
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:layout_marginLeft="@dimen/margin_vertical"
                android:layout_marginRight="@dimen/margin_vertical"
                android:layout_marginTop="@dimen/padding">

                <Spinner
                    android:id="@+id/spProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:layout_marginLeft="@dimen/margin_vertical"
                android:layout_marginRight="@dimen/margin_vertical"
                android:layout_marginTop="@dimen/padding">

                <Spinner
                    android:id="@+id/spDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:layout_marginLeft="@dimen/margin_vertical"
                android:layout_marginRight="@dimen/margin_vertical"
                android:layout_marginTop="@dimen/padding">

                <Spinner
                    android:id="@+id/spCommune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:paddingTop="@dimen/padding">
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tfbAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="@string/address"
                    android:layout_marginLeft="@dimen/margin_vertical"
                    android:layout_marginRight="@dimen/margin_vertical"
                    app:primaryColor="@color/colorAccent"
                    app:panelBackgroundColor="@color/color_white"
                    app:errorColor="@color/A400red">
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:background="@color/color_white"/>
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_vertical"
                    android:paddingTop="@dimen/padding"
                    android:weightSum="100">

                    <TextView
                        android:text="@string/product"
                        android:layout_width="0dp"
                        android:layout_weight="40"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lable_product"
                        android:drawablePadding="@dimen/padding_small"
                        android:textSize="@dimen/text_size"
                        android:layout_marginStart="@dimen/margin_vertical"
                        android:padding="@dimen/padding_small"
                        android:background="@color/color_white"/>

                    <TextView
                            android:id="@+id/txtAmount"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="50"
                            android:background="@drawable/edit_background_gray"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:layout_marginRight="@dimen/margin_vertical"
                            android:layout_marginLeft="@dimen/margin_vertical"/>

                    <ImageButton
                            android:id="@+id/btnAddProduct"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="10"
                            android:src="@drawable/ic_button_float"
                            android:background="@drawable/ic_button_float"
                            android:contentDescription="@string/add"/>

                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/layoutProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin_vertical">

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_vertical"
                android:weightSum="100"
                android:paddingTop="@dimen/padding">
                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/tfbDeliveryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:labelText="@string/delivery_date"
                    android:layout_marginLeft="@dimen/margin_vertical"
                    android:layout_marginRight="@dimen/margin_vertical"
                    app:primaryColor="@color/colorAccent"
                    app:panelBackgroundColor="@color/color_white"
                    app:errorColor="@color/A400red"
                    android:layout_weight="90">
                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtDeliveryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:background="@color/color_white"/>
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                <ImageButton
                    android:id="@+id/btnDeliveryDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_button_float"
                    android:src="@drawable/ic_button_float"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    android:contentDescription="@string/add"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:layout_marginLeft="@dimen/margin_vertical"
                android:layout_marginRight="@dimen/margin_vertical"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginBottom="50dp">

                <Spinner
                    android:id="@+id/spPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
