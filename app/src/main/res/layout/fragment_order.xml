<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.baobang.threebird.view.fragments.OrderFragment"
    android:background="@drawable/background_color_gradient"
    android:id="@+id/layoutRoot">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorPrimary"
        app:title="">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_order"
            android:textSize="@dimen/text_size_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="@dimen/padding">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/bold_word"
                android:textAllCaps="true"
                />
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/layoutOrder"
                    android:orientation="vertical"
                    android:layout_weight="25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_color">

                    <TextView
                        android:id="@+id/txtAmountAllOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/bold_word_80"
                        android:textAlignment="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:duplicateParentState="true"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/bold_word_80"
                        android:textAlignment="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:duplicateParentState="true"
                        android:text="@string/order"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutNewOrder"
                    android:layout_weight="25"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_border_white">
                    <TextView
                        android:id="@+id/txtAmountNewOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:duplicateParentState="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_small"
                        android:text="@string/_new"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:duplicateParentState="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCancelOrder"
                    android:layout_weight="25"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_border_white">
                    <TextView
                        android:id="@+id/txtAmountCancelOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/red"
                        android:textAlignment="center"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:duplicateParentState="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/red"
                        android:textAlignment="center"
                        android:text="@string/destroy"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:duplicateParentState="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutCompletedOrder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="25"
                    android:background="@drawable/background_border_white">
                    <TextView
                        android:id="@+id/txtAmountCompletedOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_small"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size"
                        android:duplicateParentState="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/complete"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_small"
                        android:duplicateParentState="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_vertical"
                android:layout_marginLeft="@dimen/margin_vertical"
                android:layout_marginBottom="@dimen/margin">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
