<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_color_gradient">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarCreateOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/colorPrimary"
        app:title=""
        app:titleTextColor="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_back_list">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_create_order"
            android:textSize="@dimen/text_size_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:layout_gravity="left"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/txtAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:src="@drawable/noimage" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:hint="Nhập tên khác"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/spClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:textSize="@dimen/text_size"></Spinner>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <EditText
                    android:id="@+id/txtOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/product_id"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="20"
                    android:padding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_name_product"
                    android:drawablePadding="@dimen/padding_small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txtCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/created_at"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="10"
                    android:padding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_name_product"
                    android:drawablePadding="@dimen/padding_small"/>

                <ImageButton
                    android:id="@+id/btnCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="90"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <Spinner
                    android:id="@+id/spStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="100"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/phone"
                    android:textSize="@dimen/text_size"
                    android:padding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_number_phone"
                    android:drawablePadding="@dimen/padding_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <Spinner
                    android:id="@+id/spProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="20"
                    android:padding="@dimen/padding_small"
                    android:drawablePadding="@dimen/padding_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <Spinner
                    android:id="@+id/spDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="20"
                    android:padding="@dimen/padding_small"
                    android:drawablePadding="@dimen/padding_small"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <Spinner
                    android:id="@+id/spCommune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="20"
                    android:padding="@dimen/padding_small"
                    android:drawablePadding="@dimen/padding_small"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/address"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="20"
                    android:padding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_address"
                    android:drawablePadding="@dimen/padding_small"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/padding_small"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product"
                        android:textSize="@dimen/text_size"
                        android:layout_weight="10"
                        android:padding="@dimen/padding_small"
                        android:drawableLeft="@drawable/ic_lable_product"
                        android:drawablePadding="@dimen/padding_small"/>

                    <TextView
                        android:id="@+id/txtAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_background_gray"
                        android:text="2"
                        android:layout_weight="50"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"/>
                </LinearLayout>
                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layoutProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txtDeliveryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/delivery_date"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="10"
                    android:padding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_name_product"
                    android:drawablePadding="@dimen/padding_small"/>

                <ImageButton
                    android:id="@+id/btnDeliveryDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="90"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">



                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="80"></Spinner>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
